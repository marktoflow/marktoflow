    "dotenv": "^16.4.5",
    "ioredis": "^5.9.2",
    "minimatch": "^10.2.1",
    "nunjucks": "^3.2.4",
    "pino": "^10.3.0",
    "prom-client": "^15.1.3",
    "ws": "^8.19.0",
    "yaml": "^2.6.0",
    "zod": "^3.24.0"
